generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255)
  createdAt  DateTime @default(now())
  img        String?  @db.VarChar(500)
  password   String   @db.VarChar(255)
  updatedAt  DateTime @updatedAt
  isVerified Boolean  @default(false)
  phone      String   @db.VarChar(20)
  Post       Post[]
}

model Post {
  id           Int       @id @default(autoincrement())
  content      String
  color        String    @db.VarChar(50)
  type         String    @db.VarChar(20)
  createdAt    DateTime? @default(now()) @db.Timestamp(6)
  authorId     Int
  images       String[]
  videoUrl     String?
  updatedAt    DateTime? @default(now()) @db.Timestamp(6)
  sharedPostId Int?
  User         User      @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "Post_authorid_fkey")
  Post         Post?     @relation("PostToPost", fields: [sharedPostId], references: [id], onUpdate: NoAction)
  other_Post   Post[]    @relation("PostToPost")
}
